<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlHighlight">@color/accent</item>

        <item name="actionBarStyle">@style/Looksy.ActionBar</item>
        <item name="drawerArrowStyle">@style/Looksy.DrawerArrowToggle</item>
    </style>

    <style name="Looksy.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/Looksy.ActionBar.Text</item>
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="Looksy.ActionBar.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Looksy.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#ffffffff</item>
    </style>

</resources>
